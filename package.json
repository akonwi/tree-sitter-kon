{
  "name": "tree-sitter-kon",
  "version": "0.1.0",
  "description": "Kon grammar for tree-sitter",
  "repository": "github:tree-sitter/tree-sitter-kon",
  "license": "MIT",
  "author": {
    "name": "akonwi"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "kon"
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.1.0",
    "node-gyp-build": "^4.8.2"
  },
  "devDependencies": {
    "prebuildify": "^6.0.1",
    "tree-sitter-cli": "^0.24.3"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "build": "node-gyp rebuild",
    "generate": "rm -rf ./build && npm run build && npx tree-sitter generate",
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "npm run build && tree-sitter playground",
    "test": "node --test bindings/node/*_test.js",
    "test:parser": "npm run generate && tree-sitter test"
  },
  "tree-sitter": [
    {
      "scope": "source.kon",
      "injection-regex": "^kon$"
    }
  ]
}
